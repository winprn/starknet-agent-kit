{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./common/**/*",
    "./config/**/*",
    "./index.ts",
    "./src/**/*",
    "./main.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
